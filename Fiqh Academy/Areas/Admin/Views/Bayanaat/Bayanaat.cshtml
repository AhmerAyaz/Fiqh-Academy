@model IEnumerable<Fiqh_Academy.Models.Bayanaat>

@{
    ViewBag.Title = "Bayanaat";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head">
                <h3>Bayanaat</h3>
            </div>
            <div class="module-body table">
                
                <a href="/Admin/Bayanaat/Details"><button type="button" class="btn btn-primary">Add Bayan</button></a>
                <table  cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Topic</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>File Size(MB)</th>
                            <th>Play Audio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Topic</td>
                            <td>@item.Category</td>
                            <td>@item.Date</td>
                            <td>@item.Size</td>
                            <td>
                                <audio controls>
                                    <source src="@Url.Content(@item.FilePath)" type="audio/ogg">
                                </audio>
                                <p>@ViewBag.FileStatus</p>
                            </td>

                        </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div><!--/.module-->

        <br />

    </div><!--/.content-->
</div><!--/.span9-->
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();

        $("audio").on("play", function () {
            $("audio").not(this).each(function (index, audio) {
                audio.pause();
            });

        });
    });
</script>


