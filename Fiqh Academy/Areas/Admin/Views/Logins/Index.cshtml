@model Fiqh_Academy.Areas.Admin.Models.Login


<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fiqh Academy</title>
    <link type="text/css" href=@Url.Content("/Areas/Content/bootstrap/css/bootstrap.min.css") rel="stylesheet">
    <link type="text/css" href=@Url.Content("/Areas/Content/bootstrap/css/bootstrap-responsive.min.css") rel="stylesheet">
    <link type="text/css" href=@Url.Content("/Areas/Content/css/theme.css") rel="stylesheet">
    <link type="text/css" href=@Url.Content("/Areas/Content/images/icons/css/font-awesome.css") rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="index.html">
                    Fiqh Academy
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">

                    <ul class="nav pull-right">

                        <li>
                            <a href="#">
                                Sign Up
                            </a>
                        </li>



                        <li>
                            <a href="#">
                                Forgot your password?
                            </a>
                        </li>
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div><!-- /navbar -->



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4 form-vertical">
                    @using (Html.BeginForm("Index", "Logins", "POST"))
                    {
                        @Html.AntiForgeryToken()
                        <div class="module-head">
                            <h3>Sign In</h3>
                        </div>
                        
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "span12", placeholder = "Username" } })
                                    @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "span12", placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <p class="text-danger" style="color:red" >@ViewBag.msg</p>
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <input type="submit" value="Login" class="btn btn-primary pull-right" />

                                    <label class="checkbox">
                                        <input type="checkbox"> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div><!--/.wrapper-->

    <div class="footer">
        <div class="container">


            <b class="copyright">&copy; 2014 Fiqh Academy - EGrappler.com </b> All rights reserved.
        </div>
    </div>
    <script src=@Url.Content("/Areas/Content/scripts/jquery-1.9.1.min.js") type="text/javascript"></script>
    <script src=@Url.Content("/Areas/Content/scripts/jquery-ui-1.10.1.custom.min.js") type="text/javascript"></script>
    <script src=@Url.Content("/Areas/Content/bootstrap/js/bootstrap.min.js") type="text/javascript"></script>
</body>
</html>