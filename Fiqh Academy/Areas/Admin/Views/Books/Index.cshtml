@model IEnumerable<Fiqh_Academy.Models.Books>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head">
                <h3>Books</h3>
            </div>
            <div class="module-body table">

                <a href="/Admin/Books/Details"><button type="button" class="btn btn-primary">Add Pdf</button></a>
                <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>File Size(MB)</th>
                            <th>Author</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Topic</td>
                            <td>@item.Category</td>
                            <td>@item.Date</td>
                            <td>@item.Size</td>
                            <td>@item.Speaker</td>
                            <td>
                                @Html.ActionLink("Download", "DownLoadFile", new { id = item.Id })
                            </td>

                        </tr>

                        }
                    </tbody>
                </table>

            </div>
        </div><!--/.module-->

        <br />

    </div><!--/.content-->
</div><!--/.span9-->

